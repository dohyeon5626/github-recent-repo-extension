{
    "name": "Recent Repo",
    "description": "Take a look at the repositories you've seen recently.",
    "version": "1.2",
    "manifest_version": 3,

    "permissions" : ["storage"],

    "icons": {
        "16": "icon/16.png",
        "32": "icon/32.png",
        "48": "icon/48.png",
        "128": "icon/128.png"
    },

    "action": {
        "default_popup": "src/domain/popup/popup.html"
    },

    "background": {
        "service_worker": "src/domain/background/background.js"
    },

    "content_scripts": [
        {
            "matches": ["https://github.com/*/*"],
            "js": ["src/global/chrome/chrome-service.js", "src/global/api/api.js", "src/domain/content/repo.js"]
        },
        {
            "matches": ["https://github.com/*"],
            "js": ["src/global/chrome/chrome-service.js", "src/global/api/api.js", "src/domain/content/org.js"]
        },
        {
            "matches": ["https://github.com/"],
            "js": ["src/global/chrome/chrome-service.js", "src/domain/content/tag-service.js", "src/domain/content/list.js"]
        }
    ]

}
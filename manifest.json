{
    "name": "Recent Repo",
    "description": "Take a look at the repositories you've seen recently.",
    "version": "1.1",
    "manifest_version": 3,

    "permissions" : ["storage"],

    "icons": {
        "16": "icon/16.png",
        "32": "icon/32.png",
        "48": "icon/48.png",
        "128": "icon/128.png"
    },

    "content_scripts": [
        {
            "matches": ["https://github.com/*/*"],
            "js": ["src/chrome-service.js", "src/api.js", "src/repo.js"]
        },
        {
            "matches": ["https://github.com/*"],
            "js": ["src/chrome-service.js", "src/api.js", "src/org.js"]
        },
        {
            "matches": ["https://github.com/"],
            "js": ["src/chrome-service.js", "src/tag-service.js", "src/list.js"]
        }
    ]

}
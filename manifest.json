{
    "name": "Recent Repo",
    "description": "Take a look at the repositories you've seen recently.",
    "version": "1.0",
    "manifest_version": 3,

    "permissions" : ["scripting", "storage"],

    "content_scripts": [
        {
            "matches": ["https://github.com/*/*"],
            "js": ["src/repo.js"]
        },
        {
            "matches": ["https://github.com/*"],
            "js": ["src/org.js"]
        },
        {
            "matches": ["https://github.com/"],
            "js": ["src/list.js"]
        }
    ]

}